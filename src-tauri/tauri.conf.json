{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Rive Animation Viewer",
  "version": "1.7.1",
  "identifier": "app.rive.animation.viewer",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run serve",
    "devUrl": "http://localhost:8080",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Rive Animation Viewer",
        "width": 1250,
        "height": 900,
        "minWidth": 1090,
        "minHeight": 850,
        "resizable": true,
        "backgroundColor": "#00000000",
        "transparent": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "shortDescription": "Rive animation player and runtime debugger",
    "longDescription": "Desktop viewer for Rive files with VM/state machine controls, runtime switching, code injection, event logging, and standalone demo export.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    },
    "fileAssociations": [
      {
        "ext": [
          "riv"
        ],
        "name": "Rive Animation",
        "description": "Rive animation file",
        "role": "Viewer",
        "rank": "Owner",
        "mimeType": "application/octet-stream",
        "exportedType": {
          "identifier": "app.rive.animation.viewer.riv",
          "conformsTo": [
            "public.data"
          ]
        }
      }
    ]
  }
}
